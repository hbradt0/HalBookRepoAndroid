<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/backLoginScreenCloud1"
        android:text="Back"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/logininstructionsCloud1"
        android:text="Please Login"
        android:background="@android:color/white"
        android:textColor="@android:color/black"/>

         <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/downloadblobjournal"
        android:text="Download1"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_blue_bright"
        />

       <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/downloadblobtodo"
        android:text="Download"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_blue_bright"
        />

       
       <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/OutputBlob"
        android:textSize="20sp"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/bookText"
        android:text=""
        android:isScrollContainer="true"
        android:background="@android:color/white"
        android:scrollbars = "vertical"
        />

        <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/uploadblobtodo"
        android:text="Upload"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_purple"
        />

        <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/uploadblobjournal"
        android:text="Upload1"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_purple"
        />

         <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/deleteblobjournal"
        android:text="Delete"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_red_light"
        />

         <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/deleteblobtodo"
        android:text="Delete1"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_red_light"
        />

       <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/viewBlob"
        android:text="View"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_blue_light"
        />

    </LinearLayout>
</ScrollView>