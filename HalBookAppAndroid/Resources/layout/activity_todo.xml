<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/todoback"
        android:text="@+string/BackText1"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />
          
        <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/todofreshstart"
        android:text="@+string/freshstart"
        android:layout_marginLeft="200px"
        />

        <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/todoshare"
        android:text="@+string/share"
        android:layout_marginLeft="200px"
        />

        <TextView
        android:layout_width="800px"
        android:layout_marginHorizontal="1600px"
        android:layout_height="1200px"
        android:textSize="15sp"
        android:id="@+id/todotext"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/upload"
        android:gravity="bottom"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/tododelete1line"
        android:text="@+string/delete1line"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_purple"
        />

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/todoupload"
        android:text="@+string/upload"
        android:layout_centerInParent="true"
        />

        <EditText
        android:layout_width="800px"
        android:layout_height="300px"
        android:id="@+id/todowrite"
        android:layout_centerInParent="true"
        android:text=""
        android:inputType="textMultiLine" 
        android:lines="8" 
        android:minLines="3" 
        android:gravity="top|start" 
        android:maxLines="10" 
        android:scrollbars="vertical"
        android:background="@android:color/white"
        />

    </LinearLayout>
</ScrollView>
