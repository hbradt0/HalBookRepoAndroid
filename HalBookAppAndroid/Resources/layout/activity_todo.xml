<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#E6E6FA">

        <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/todoback"
        android:text="@+string/BackText1"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

        <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/daysprior"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:inputType="textEmailAddress" />
        
        <ImageView
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/todoshare"
        android:text="@+string/share"
        android:layout_weight="1"
        android:contentDescription="@+string/ImageText"
        android:layout_gravity="left"
        android:src="@android:drawable/ic_menu_share"
        />

        <ImageView
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/todofreshstart"
        android:contentDescription="@+string/ImageText"
        android:text="@+string/freshstart"
        android:src="@android:drawable/ic_menu_delete"
        />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="15sp"
        android:id="@+id/todotext"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/upload"
        android:gravity="bottom"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/tododelete1line"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@+string/delete1line"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_purple"
        />

        <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/todoupload"
        android:text="@+string/upload"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/todowrite"
        android:layout_centerInParent="true"
        android:text=""
        android:inputType="textMultiLine" 
        android:lines="8" 
        android:minLines="3" 
        android:gravity="top|start" 
        android:maxLines="10" 
        android:scrollbars="vertical"
        android:background="@android:color/white"
        />

    </LinearLayout>
</ScrollView>
