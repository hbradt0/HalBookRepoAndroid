<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    android:background="#E6E6FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        
       <Button
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="250dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/BackImageScreen"
        android:text="@+string/BackJournalEdit"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

       <Button  
        android:text="Pick Date"  
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="250dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_gravity="left"
        android:id="@+id/imageDatePick"
        android:visibility="gone"
        /> 
        
        <ImageView
            android:layout_height="400dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:id="@+id/chooseimagephoto"
            android:contentDescription="@+string/ImageText2"
            android:src="@drawable/maintitlepic" />

        <TextView  
        android:text="Click the 0/1 to show stored and new background results"  
        android:layout_width="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"      
            android:layout_height="wrap_content"  
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
        android:id="@+id/InstructionsImage"
        android:textColor="@android:color/holo_purple"
        android:layout_gravity=""/> 

        <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/camerapicture"
        android:text="@+string/SaveJournalEdit"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        />

        <Button
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/chooseimage"
        android:text="@+string/SaveJournalEdit"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        />
  

    </LinearLayout>
</ScrollView>
