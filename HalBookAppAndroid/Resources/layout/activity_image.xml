<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview2"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:paddingLeft="16dp"
   android:paddingRight="16dp" >
   
      
     <Button
            android:layout_height="42dp"
            android:layout_width="150dp"
            android:id="@+id/BackImageScreen"
            android:text="@+string/BackJournalEdit"
            android:backgroundTint="@android:color/holo_blue_light" />
    
        <ImageView
            android:text="Pick Date"
            android:layout_height="42dp"
            android:layout_width="match_parent"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_gravity="left"
            android:id="@+id/imageDatePick"
            android:contentDescription="@+string/ImageText"
            android:src="@android:drawable/ic_menu_camera"
            android:visibility="gone"
        />

        <ImageView
            android:layout_height="550dp"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:paddingTop="50dp"
            android:paddingBottom="100dp"
            android:id="@+id/chooseimagephoto"
            android:contentDescription="@+string/ImageText2"
            android:src="@drawable/maintitlepic" />

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_below="@id/chooseimagephoto"
            android:layout_alignRight="@id/chooseimagephoto"
            android:contentDescription="@+string/ImageText"
            android:src="@android:drawable/ic_menu_camera"
            android:id="@+id/camerapicture"
            android:text="@+string/SaveJournalEdit"
            android:backgroundTint="@android:color/holo_blue_light"
        />

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_below="@id/chooseimagephoto"
            android:layout_alignLeft="@id/chooseimagephoto"
            android:contentDescription="@+string/ImageText"
            android:src="@android:drawable/picture_frame"
            android:id="@+id/chooseimage"
            android:text="@+string/SaveJournalEdit"
            android:backgroundTint="@android:color/holo_blue_light"
        />

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_below="@id/BackImageScreen"
            android:layout_alignRight="@id/chooseimagephoto"
            android:adjustViewBounds="true"
            android:id="@+id/tinypic"
            android:contentDescription="@+string/ImageText2"
            android:src="@drawable/pinkflower" />

        <ImageView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_below="@id/camerapicture"
            android:id="@+id/titletoggle"
            android:contentDescription="@+string/ImageText2"
            android:src="@drawable/maintitlepic" />

</RelativeLayout>
</ScrollView>