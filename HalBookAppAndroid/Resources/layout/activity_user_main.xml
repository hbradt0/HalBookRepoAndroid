<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/back"
        android:text="@+string/BackText"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="1000px"
        android:layout_height="1600px"
        android:id="@+id/bookText"
        android:textSize="20sp"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/bookText"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>

    <EditText
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/hiddenbuttontext"
        android:layout_gravity="top"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/hiddenbutton"
        android:text="@+string/BackText"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@drawable/ButtonColor"/>

    </LinearLayout>
</ScrollView>