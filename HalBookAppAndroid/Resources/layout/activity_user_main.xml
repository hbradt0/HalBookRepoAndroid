<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/back"
        android:text="@+string/BackText"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

        <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/dayspriorjournal"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:inputType="textEmailAddress" />
        
       <ImageView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/todosharejournal"
            android:layout_above="@+id/Instructions"
            android:contentDescription="@+string/ImageText"
            android:src="@android:drawable/ic_menu_share"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/bookText"
        android:textSize="20sp"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/bookText"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>


    <EditText
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/hiddenbuttontext"
        android:layout_gravity="top"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="200dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/hiddenbutton"
        android:text="@+string/BackText"
        android:layout_centerInParent="true"
        android:layout_gravity="left"
        android:backgroundTint="@android:color/holo_blue_light"
        android:background="@drawable/ButtonColor"/>

       <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/codeText"
        android:textSize="20sp"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>

    </LinearLayout>
</ScrollView>