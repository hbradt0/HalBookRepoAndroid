<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/back1"
        android:text="@+string/BackText1"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

        <Button  
        android:text="Pick Date"  
        android:layout_width="300px"  
        android:layout_height="100px" 
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_gravity="left"
        android:id="@+id/buttonDateText"
        /> 
        
        <TextView  
        android:text=""  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:id="@+id/editTextDateShare" /> 

        <Button
        android:layout_width="300px"
        android:layout_height="100px"
        android:id="@+id/freshstart"
        android:text="@+string/freshstart"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_marginLeft="200px"
        />

        <TextView
        android:layout_width="800px"
        android:layout_marginHorizontal="1600px"
        android:layout_height="1200px"
        android:textSize="15sp"
        android:id="@+id/yourbooktext"
        android:textColor="@android:color/holo_purple"
        android:layout_centerInParent="true"
        android:layout_above="@+id/upload"
        android:gravity="bottom"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:background="@drawable/bordertext"
        android:scrollbars = "vertical"/>

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/delete1line"
        android:text="@+string/delete1line"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_centerInParent="true"
        />

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/upload"
        android:text="@+string/upload"
        android:backgroundTint="@android:color/holo_blue_light"
        android:layout_centerInParent="true"
        />

        <EditText
        android:layout_width="800px"
        android:layout_height="300px"
        android:id="@+id/edityours"
        android:layout_centerInParent="true"
        android:text=""
        android:inputType="textMultiLine" 
        android:lines="8" 
        android:minLines="3" 
        android:gravity="top|start" 
        android:maxLines="10" 
        android:scrollbars="vertical"
        android:background="@android:color/white"
        />

    </LinearLayout>
</ScrollView>
