<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/back1"
        android:text="@+string/BackText1"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />

        <TextView
        android:layout_width="1000px"
        android:layout_height="800px"
        android:id="@+id/yourbooktext"
        android:layout_centerInParent="true"
        android:layout_above="@+id/upload"
        android:gravity="center"
        android:text="@+string/TextViewText"
        android:isScrollContainer="true"
        android:scrollbars = "vertical"/>
    
        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/freshstart"
        android:text="@+string/freshstart"
        android:layout_centerInParent="true"
        />

        <Button
        android:layout_width="600px"
        android:layout_height="100px"
        android:id="@+id/upload"
        android:layout_above="@+id/edityours"
        android:text="@+string/upload"
        android:layout_centerInParent="true"
        />

        <EditText
        android:layout_width="700px"
        android:layout_height="100px"
        android:id="@+id/edityours"
        android:layout_centerInParent="true"
        android:text=""
        android:inputType="textEmailAddress"
        android:gravity="center" />


</LinearLayout>

