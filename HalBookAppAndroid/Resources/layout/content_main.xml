<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="377.0dp"
        android:layout_height="100px"
        android:id="@+id/ReadPageButton"
        android:text="Click to Read"
        android:gravity="top"
        android:layout_marginRight="130.5dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="181.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/YourEmail"
        android:layout_above="@+id/YourEmail"
        android:layout_centerInParent="true"
        android:text=""/>

    <Button
        android:layout_width="252.5dp"
        android:layout_height="46.0dp"
        android:gravity="bottom"
        android:id="@+id/EmailPageButton"
        android:layout_below="@+id/YourEmail"
        android:text="Click to story"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
